{
	"manifest_version": 2,
	
	"name": "Hello_World",
	"description": "Print Hello, World! message",
	"version": "1.0",
	
	"browser_action": {
	    "default_icon": "icon.png",
	    "default_popup": "popup.html"
	},
	"permissions": [
	    "tabs",
	    "<all_urls>"
	],
	"optional_permissions": [
	"<all_urls>"
	],
	"background": {
		"scripts": [ "background.js" ],
		"persistent": false
	}
 }